{
  "version": 2,
  "services": [
    {
      "name": "oil-spill-backend",
      "type": "web",
      "buildCommand": "bash deploy.sh",
      "startCommand": "gunicorn app:app --bind 0.0.0.0:$PORT --workers 2 --timeout 300",
      "env": {
        "PYTHON_VERSION": "3.8.13",
        "PORT": "8080",
        "PYTHONUNBUFFERED": "1",
        "GDRIVE_SAR_MODEL_ID": "${GDRIVE_SAR_MODEL_ID}",
        "GDRIVE_INFRARED_MODEL_ID": "${GDRIVE_INFRARED_MODEL_ID}"
      },
      "python": {
        "version": "3.8.13"
      }
    }
  ]
}
