{
  "version": 2,
  "services": [
    {
      "name": "oil-spill-backend",
      "type": "web",
      "buildCommand": "bash deploy.sh",
      "startCommand": "gunicorn app:app --bind 0.0.0.0:$PORT --workers 2 --timeout 300",
      "env": {
        "PYTHON_VERSION": "3.10.13",
        "PORT": "8080",
        "PYTHONUNBUFFERED": "1",
        "MODEL_DOWNLOAD_URL": "https://github.com/sibi15/Oil-Spill-Detection-using-Computer-Vision/releases/download/v1.0/sar_model.tflite"
      },
      "python": {
        "version": "3.10.13"
      }
    }
  ]
}
